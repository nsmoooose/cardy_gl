#!/bin/bash
set -e
cfg=$1

if [ "$cfg" == "windows" ]; then
	cat > config <<EOF
export LIBS=-lcardy-game -lcardy-backgrounds -lcardy-api -lcardy-network -lcardy-solitaires -lglu32 -lm -lopengl32 -lws2_32 $(pkg-config --libs glib-2.0 gdk-pixbuf-2.0 pango cairo librsvg-2.0 libxml-2.0 pangocairo gio-2.0 freeglut) -L$(pwd)/api -L$(pwd)/game -L$(pwd)/api/network -L$(pwd)/api/solitaires -L$(pwd)/game/backgrounds
export CFLAGS=-I$(pwd) -mwindows -g -Os -Wall -pedantic -Werror $(pkg-config --cflags glib-2.0 gdk-pixbuf-2.0 cairo librsvg-2.0 libxml-2.0 pangocairo gio-2.0)
EOF

elif [ "$cfg" == "linux" ]; then
    # TODO Readd '-Wall -pedantic -Werror' again.
	cat > config <<EOF
export CFLAGS=-I$(pwd) -g -Os \$(shell pkg-config --cflags glib-2.0 gdk-pixbuf-2.0 cairo librsvg-2.0)
export LIBS=-lcardy-game -lcardy-backgrounds -lcardy-api -lcardy-network -lcardy-solitaires -lglut -lGL -lGLU -lm \$(shell pkg-config --libs glib-2.0 gdk-pixbuf-2.0 cairo librsvg-2.0) -L$(pwd)/api -L$(pwd)/game -L$(pwd)/api/network -L$(pwd)/api/solitaires -L$(pwd)/game/backgrounds
EOF

else
	echo "Usage:"
	echo "  $0 platform"
	echo "Platforms:"
	echo "  windows"
	echo "  linux"
fi
